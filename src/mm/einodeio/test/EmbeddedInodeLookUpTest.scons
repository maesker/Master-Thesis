#!/usr/bin/python
Import('testRunner')

import os
import glob
import sys

def unique( list ) :
         return dict.fromkeys( list ).keys()


def recursiveDirs(root) :
         return filter( ( lambda a : a.rfind( ".git") == -1 ), [ a[0] for a in os.walk( root ) ] )


def scanFiles(dir, accept=[ "*.cpp", "*.c" ], reject=["test"] ) :
         sources = []
         paths = recursiveDirs( dir )
         for path in paths:
                 for pattern in accept:
                         sources += glob.glob( path + "/" + pattern )
         for pattern in reject:
                 sources = filter( ( lambda a : a.rfind( pattern ) == -1 ), sources )
         return unique( sources )


testSrc = ["../EmbeddedInodeLookUp.cpp", "../ParentCache.cpp", "../ParentCacheException.cpp", "../EInodeIOException.cpp", "./EmbeddedInodeLookUpTest.cpp"]
testSrc.append(scanFiles("../../storage"))
testSrc.append(scanFiles("../../../pc2fsprofiler"))

testEnv = Environment( )
testEnv.Append( CPPPATH=["../../../include"] )
testEnv.Append( LIBS = [ "gtest", "zmq", "gtest_main" ] )
testEnv.Append( CCFLAGS =  ['-std=gnu++0x', '-g'] )
testEnv.Program( target = 'embeddedInodeLookUpTest', source = testSrc)

Command("embeddedInodeLookUpTest.passed",'embeddedInodeLookUpTest', testRunner.runUnitTest)

